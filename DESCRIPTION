Package: sc2sc
Type: Package
Title: Spatial Transfer of Statistics among Spanish Census Sections
Version: 0.0.1-7
Authors@R: 
    c(person(given = "Pérez",
           family = "Virgilio",
           role = "aut",
           email = "virgilio.perez@uv.es",,
           comment = c(ORCID = "0000-0002-7628-2855")),
      person(given = "Jose M.",
